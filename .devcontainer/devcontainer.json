{
"name": "Next.js Dev Container",
"build": {
"dockerfile": "../Dockerfile"
},
"features": {
"ghcr.io/devcontainers/features/common-utils:2": {
    "installZsh": true,
    "installOhMyZsh": true,
    "username": "vscode",
    "userUid": "automatic",
    "userGid": "automatic",
    "configureZshAsDefaultShell": true
},
"ghcr.io/devcontainers/features/docker-in-docker:2": {
    "version": "latest",
    "dockerDashComposeVersion": "v2"
}
},
"mounts": [
"source=${localEnv:HOME}${localEnv:USERPROFILE}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached"
],
"customizations": {
"vscode": {
    "extensions": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "bradlc.vscode-tailwindcss",
    "streetsidesoftware.code-spell-checker",
    "mhutchie.git-graph",
    "donjayamanne.githistory",
    "github.vscode-github-actions",
    "gruntfuggly.todo-tree",
    "christian-kohler.npm-intellisense",
    "christian-kohler.path-intellisense",
    "oderwat.indent-rainbow",
    "shardulm94.trailing-spaces",
    "yzhang.markdown-all-in-one",
    "davidanson.vscode-markdownlint"
    ],
    "settings": {
    "editor.formatOnSave": true,
    "terminal.integrated.defaultProfile.linux": "zsh"
    }
}
},
"forwardPorts": [3000],
"postCreateCommand": "sudo chown -R vscode:vscode . || true && npm install && sudo npm install -g @anthropic-ai/claude-code",
"postStartCommand": "sudo npm run dev:webpack",
"remoteUser": "vscode",

}